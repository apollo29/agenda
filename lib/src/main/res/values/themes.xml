<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Agenda" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <!-- Agenda -->
        <item name="textAppearanceAgendaDay">@style/Base.Theme.Agenda.Day</item>
        <item name="textAppearanceAgendaMonth">@style/Base.Theme.Agenda.Month</item>
        <item name="textAppearanceAgendaWeekday">@style/Base.Theme.Agenda.Weekday</item>

        <!-- Calendar -->
        <item name="textAppearanceCalendarDay">@style/Base.Theme.Calendar.Day</item>
        <item name="textAppearanceCalendarHeader">@style/Base.Theme.Calendar.Header</item>
        <item name="textAppearanceCalendarCurrentMonth">@style/Base.Theme.Calendar.TextAppearanceMonth</item>

        <!-- Colors -->
        <item name="agendaTextColor">@color/black</item>
        <item name="agendaTextColorInverse">@color/white</item>
        <item name="agendaTextColorDisabled">@color/gray</item>
    </style>

    <style name="Theme.Agenda" parent="Base.Theme.Agenda" />

    <!--
    // Agenda
    -->
    <style name="Base.Theme.Agenda.Day" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Base.Theme.Agenda.Month" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Base.Theme.Agenda.Weekday" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textFontWeight">500</item>
        <item name="android:textColor">?attr/agendaTextColor</item>
    </style>

    <!--
    // Calendar
    -->
    <style name="Base.Theme.Calendar.Day" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="Base.Theme.Calendar.Header" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textFontWeight">700</item>
    </style>

    <style name="Base.Theme.Calendar.TextAppearanceMonth" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textFontWeight">500</item>
    </style>

</resources>